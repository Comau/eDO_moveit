<launch>
  <arg name="sim" default="false" />
  <arg name="debug" default="false" />
    
  <!-- Remap follow_joint_trajectory -->
  <remap if="$(arg sim)" from="/follow_joint_trajectory" to="/edo/arm_controller/follow_joint_trajectory"/>
  <remap if="$(arg sim)" from="/joint_states" to="/edo/joint_states"/>
  
  <!-- Launch moveit -->
  <include file="$(find edo_moveit)/launch/move_group.launch">
    <arg name="debug" default="$(arg debug)" />
  </include>
</launch>
